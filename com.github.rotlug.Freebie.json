{
    "id" : "com.github.rotlug.Freebie",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "base": "org.winehq.Wine",
    "base_version": "stable-24.08",
    "command" : "freebie",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--device=all",
        "--socket=wayland",
        "--socket=x11",
        "--socket=pulseaudio"
    ],
    "sdk-extensions": [
        "org.gnome.Sdk.Compat.i386",
        "org.freedesktop.Sdk.Extension.toolchain-i386"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-modules.json",
        {
            "name" : "other-modules"
        },
        {
            "name" : "aria2",
            "config-opts" : [
                "--disable-libaria2",
                "--disable-websocket",
                "--without-sqlite3"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "sha256" : "58d1e7608c12404f0229a3d9a4953d0d00c18040504498b483305bcb3de907a5",
                    "url" : "https://github.com/aria2/aria2/releases/download/release-1.36.0/aria2-1.36.0.tar.xz"
                }
            ]
        },
        {
            "name" : "blueprint-compiler",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag" : "v0.14.0"
                }
            ],
            "cleanup" : [
                "*"
            ]
        },
        {
            "name" : "freebie",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
